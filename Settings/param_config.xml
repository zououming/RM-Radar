    <!--Parameter for Vision System Mode, 0(default) means for armor detection mode, 1 means for rune system mode-->
    <mode>0</mode>

    <!--Bullet speed (m/s)-->
    <bullet_speed>22</bullet_speed>

    <!--Scale factor of Z
    1.4596   // camrea 2
    1.5348   // camrea MH
    1.4714   // camrea RM3-01
    1.5348   // camrea RM3-02
    1.4939   // camrea RM3-03
    1.4704   // camrea RM3-04
    1.5158   // camrea RM3-05
    -->
