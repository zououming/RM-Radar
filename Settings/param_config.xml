    <sight_offset_normalized_base>200</sight_offset_normalized_base>
    <area_normalized_base>1000</area_normalized_base>
    <enemy_color>1</enemy_color>
    <EnergyMIN>80</EnergyMIN>
    <EnergyMAX>255</EnergyMAX>
    <EnergyareaMIN>50</EnergyareaMIN>
    <EnergyareaMAX>1000</EnergyareaMAX>
